<% @collections.each do |collection| %>

  <nav class="limited collection">
    <header>
      <h3><%= raw collection.name %></h3>
      <%= link_to raw("See More in #{collection.name} &rarr;"), collection, role: 'button', class: 'see-more' %>
    </header>
    <ul class="clearfix list-unstyled">
      <% collection.apps.where(enabled: true).available_to_launch_method(launch_provider.get).take(9).each do |app| %><li>
          <a href="<%= url_for app %>">
            <figure>
              <%= app.icon_tag %>
              <figcaption>
                <h4 style="display:inline-block"><%= app.title %></h4>
                <% if app.official %>
                  <%= image_tag "inhouse_app.png", title:"An offical app.", style: 'height:15px; margin:0px; margin-top:2px; padding-left:10px;' %>
                <% end %>
                <p><%= app.description %></p>
                <div class="stars">
                  <% unless app.average_rating.nan? %>
                    <span class="filled"><%= raw (1..app.average_rating.round(0)).map { '&#9733;' }.join ' ' %></span>
                    <span class="unfilled"><%= raw (app.average_rating.round(0)+1..5).map { '&#9734;' }.join ' ' %></span>
                  <% else %>
                    <span class="none"><%= raw (1..5).map { '&#9734;' }.join ' ' %></span>
                  <% end %>
                </div>
              </figcaption>
            </figure>
          </a>
        </li><% end %>
    </ul>
  </nav>

<% end %>
